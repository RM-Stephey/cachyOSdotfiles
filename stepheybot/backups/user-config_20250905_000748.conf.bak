# ┃                StepheyBot MINIMAL Theme                      ┃
# ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛

# Disable most animations
animation = windows, 0
animation = fade, 0
animation = workspaces, 1, 2, default
animation = border, 0

# Minimal decorations
decoration {
    rounding = 0
    shadow {
        enabled = false
    }
    blur {
        enabled = false
    }
}

# Clean borders only
windowrulev2 = bordercolor $cachylblue, focus:1
windowrulev2 = bordercolor $cachygray, focus:0
