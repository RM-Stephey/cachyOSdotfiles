# ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
# ┃                  StepheyBot Neon Enhancement Config          ┃
# ┃                     Safe Performance Tweaks                 ┃
# ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛

# Enhanced neon bezier curves for smoother cyberpunk feel
bezier = neonGlow, 0.25, 0.46, 0.45, 0.94
bezier = cyberBounce, 0.68, -0.55, 0.265, 1.55
bezier = synthWave, 0.23, 1, 0.32, 1
bezier = technoEase, 0.77, 0, 0.175, 1

# Enhanced animations with new curves (safe performance settings)
animation = windowsIn, 1, 4, cyberBounce, popin 85%
animation = windowsOut, 1, 3, synthWave, slide
animation = fadeIn, 1, 6, neonGlow
animation = fadeOut, 1, 4, technoEase
animation = fadeShadow, 1, 8, neonGlow
animation = borderangle, 1, 30, neonGlow, once

# Layer animations for better UI feedback
animation = layersIn, 1, 3, cyberBounce, slide
animation = layersOut, 1, 3, synthWave, slide

# Enhanced workspace transitions
animation = workspaces, 1, 5, cyberBounce, slidefade 15%

# StepheyBot window rules for enhanced neon experience
windowrulev2 = bordercolor $neon_pink_glow $neon_blue_glow, focus:1
windowrulev2 = bordercolor $neon_purple_dim $neon_blue_dim, focus:0
windowrulev2 = animation cyberBounce, class:^(kitty|wezterm|alacritty)$
windowrulev2 = animation synthWave, class:^(firefox|chromium)$
windowrulev2 = rounding 12, class:^(rofi|wofi)$

# Enhanced floating window experience
windowrulev2 = animation cyberBounce, floating:1

# Gaming performance toggle-friendly rules (won't conflict with gamemode script)
windowrulev2 = noblur, class:^(steam_app_)(.*)$
windowrulev2 = noshadow, class:^(steam_app_)(.*)$
windowrulev2 = noanim, class:^(steam_app_)(.*)$

# Layer rules for enhanced UI elements
layerrule = blur, ^(waybar|eww-.*|rofi|wofi)$
layerrule = ignorealpha 0.3, ^(waybar|eww-.*)$

# Enhanced decoration overrides (performance conscious)
decoration {
    # Subtle neon glow enhancement
    shadow {
        range = 24        # Optimized for performance
        render_power = 3  # Balanced quality/performance
    }

    blur {
        # Performance-optimized blur for RTX 4090
        passes = 2        # Sweet spot for your GPU
        size = 2          # Lighter than default but still effective
        vibrancy = 0.3    # Enhanced neon saturation
        vibrancy_darkness = 0.1
    }
}

# Miscellaneous enhancements
misc {
    # Better for 144Hz+ displays
    vfr = true
    # Enhanced focus behavior
    focus_on_activate = true
}

# StepheyBot special workspace rules
windowrulev2 = animation cyberBounce, onworkspace:special
layerrule = blur, ^(special:.*)$

# Development environment optimizations
windowrulev2 = bordercolor $neon_green_glow $neon_green_dim, class:^(code|codium|neovim|nvim)$
windowrulev2 = animation neonGlow, class:^(code|codium)$

# Terminal enhancements
windowrulev2 = bordercolor $neon_blue_glow $neon_purple_dim, class:^(kitty|wezterm|alacritty|foot)$

# ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
# StepheyBot Mouse Stuttering Fixes for Fullscreen Apps        ┃
# ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛

# Fix cursor stuttering by enabling hardware cursors for fullscreen
cursor {
    no_hardware_cursors = false
    no_break_fs_vrr = false
    min_refresh_rate = 240
    hotspot_padding = 0
    inactive_timeout = 0
    enable_hyprcursor = true
}

# Optimized VRR settings for smooth fullscreen experience
misc {
    vrr = 1  # Force VRR always on for consistent performance
    vfr = false  # Disable VFR to prevent frame timing issues in fullscreen
    animate_manual_resizes = false
    animate_mouse_windowdragging = false
    new_window_takes_over_fullscreen = 2
}

# Fullscreen application optimizations
windowrulev2 = immediate, fullscreen:1
windowrulev2 = noblur, fullscreen:1
windowrulev2 = noshadow, fullscreen:1
windowrulev2 = noanim, fullscreen:1
windowrulev2 = noborder, fullscreen:1

# Gaming and performance-critical applications
windowrulev2 = immediate, class:^(steam_app_)(.*)$
windowrulev2 = noblur, class:^(steam_app_)(.*)$
windowrulev2 = noshadow, class:^(steam_app_)(.*)$
windowrulev2 = noanim, class:^(steam_app_)(.*)$
windowrulev2 = noborder, class:^(steam_app_)(.*)$

# Video and media applications
windowrulev2 = immediate, class:^(mpv|vlc|firefox)$, title:^(.* - YouTube.*)$
windowrulev2 = noblur, class:^(mpv|vlc|firefox)$, title:^(.* - YouTube.*)$
windowrulev2 = noshadow, class:^(mpv|vlc|firefox)$, title:^(.* - YouTube.*)$

# Browser fullscreen video optimization
windowrulev2 = immediate, title:^(.*(YouTube|Netflix|Twitch|Prime Video).*)$
windowrulev2 = noblur, title:^(.*(YouTube|Netflix|Twitch|Prime Video).*)$
windowrulev2 = noshadow, title:^(.*(YouTube|Netflix|Twitch|Prime Video).*)$

